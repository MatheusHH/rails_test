<% if action_name == "edit" %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= form.label :schedule_date %>
        <%= form.date_field :schedule_date, class: "form-control", disabled: "disabled" %>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= form.label :schedule_date %>
        <%= form.date_field :schedule_date, class: "form-control", required: "required", max: Date.today %>
      </div>
    </div>
  </div>
<% end %>