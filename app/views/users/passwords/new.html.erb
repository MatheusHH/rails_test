<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2"><%= t("devise.passwords.new.forgot_your_password") %></h1>
                    <p class="mb-4"><%= t("new_password_text")%></p>
                  </div>
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "user" }) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="form-group">
                      <%= f.email_field :email, class: "form-control form-control-user", id: "exampleInputEmail", placeholder: "Enter Email Address...", autofocus: true, autocomplete: "email",  aria: { describedby:"emailHelp"} %>
                    </div>

                    <div class="actions">
                      <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions"), class: "btn btn-primary btn-user btn-block" %>
                    </div>
                  <% end %>
                  <hr>
                  <div class="text-center">
                    <%= render "users/shared/links" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>